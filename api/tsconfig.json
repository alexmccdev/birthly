{
    "compilerOptions": {
        "baseUrl": ".",
        "typeRoots": ["src/types", "node_modules/@types"],
        // Should match _moduleAliases in package.json
        "paths": {
            "@controllers/*": ["src/controllers/*"],
            "@routes/*": ["src/routes/*"],
            "@utils/*": ["src/utils/*"],
            "@middleware/*": ["src/middleware/*"]
        }
    }
}
